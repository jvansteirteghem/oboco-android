<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/browser_row_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:src="@drawable/ic_folder_white_24dp" />

    <TextView
        android:id="@+id/browser_row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/browser_row_icon"
        android:layout_toLeftOf="@id/browser_row_delete_icon"
        android:layout_centerVertical="true"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/browser_row_delete_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/outline_clear_black_24" />

</RelativeLayout>