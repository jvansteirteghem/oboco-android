<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gitlab.jeeto.oboco.fragment.AccountLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AccountLoginFragment">

        <EditText
            android:id="@+id/account_login_et_baseUrl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="baseUrl: http://address:port"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="text"
            android:text=""
            android:layout_above="@id/account_login_et_name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/account_login_et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="text"
            android:text=""
            android:layout_above="@id/account_login_et_password"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/account_login_et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:inputType="textPassword"
            android:text=""
            android:layout_centerInParent="true"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/account_login_cb_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_login_et_password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="show password" />

        <Button
            android:id="@+id/account_login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_login_cb_show_password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="log in"/>

    </RelativeLayout>

</FrameLayout>
