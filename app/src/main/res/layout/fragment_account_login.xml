<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest_darkest">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/account_login_et_baseUrl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:hint="@string/account_login_base_url_hint"
            android:inputType="text"
            android:padding="15dp"
            android:text=""
            android:textSize="16sp" />
        <EditText
            android:id="@+id/account_login_et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/account_login_name_hint"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:inputType="text"
            android:text=""
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/account_login_et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/account_login_password_hint"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:inputType="textPassword"
            android:text=""
            android:textSize="16sp"/>
        <CheckBox
            android:id="@+id/account_login_cb_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="@string/account_login_show_password"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/account_login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/account_login_log_in"
            android:theme="@style/AppThemeButton"/>
    </LinearLayout>
</FrameLayout>
