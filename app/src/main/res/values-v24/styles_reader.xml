        <item name="android:contextPopupMenuStyle">@style/ReaderDarkPopupMenuTheme</item>
        <item name="actionOverflowMenuStyle">@style/ReaderDarkPopupMenuOverflowTheme</item>
    </style>

    <style name="ReaderDarkToolbarTheme" parent="CommonReaderDarkToolbarTheme">
        <item name="android:contextPopupMenuStyle">@style/ReaderDarkPopupMenuTheme</item>
        <item name="actionOverflowMenuStyle">@style/ReaderDarkPopupMenuOverflowTheme</item>
    </style>

    <style name="ReaderDarkPopupMenuTheme" parent="CommonReaderDarkPopupMenuTheme">
        <item name="android:popupEnterTransition">@null</item>
        <item name="android:popupExitTransition">@null</item>
    </style>

    <style name="ReaderDarkPopupMenuOverflowTheme" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupEnterTransition">@null</item>
        <item name="android:popupExitTransition">@null</item>
    </style>
