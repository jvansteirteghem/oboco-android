<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="AppThemeActionBar" parent="BaseAppThemeActionBar">
    </style>

    <style name="AppThemePopupMenu" parent="BaseAppThemePopupMenu">
    </style>

    <style name="AppThemeAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/darkest_lightest</item>
        <item name="colorControlNormal">@color/darkest_lightest</item>
        <item name="colorControlHighlight">@color/highlight_light_dark</item>
        <item name="android:textColorPrimary">@color/darkest_lightest</item>
        <item name="android:textColor">@color/darkest_lightest</item>
        <item name="android:textColorHint">@color/darkest_lightest</item>
        <item name="android:colorBackground">@color/lightest_darker</item>
    </style>

    <style name="AppThemeButton">
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textColorHint">@color/lightest</item>
        <item name="colorAccent">@color/lightest</item>
        <item name="colorControlNormal">@color/lightest</item>
        <item name="colorControlHighlight">@color/highlight_dark</item>
        <item name="android:backgroundTint">@color/darker</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/darkest_lightest</item>
        <item name="colorControlNormal">@color/darkest_lightest</item>
        <item name="colorControlHighlight">@color/highlight_light_dark</item>
        <item name="android:textColorPrimary">@color/darkest_lightest</item>
        <item name="android:textColor">@color/darkest_lightest</item>
        <item name="android:textColorHint">@color/darkest_lightest</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/lightest_darkest</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/darkest</item>
        <item name="android:alertDialogTheme">@style/AppThemeAlertDialog</item>
        <item name="alertDialogTheme">@style/AppThemeAlertDialog</item>
    </style>

    <style name="BaseAppThemeActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorAccent">@color/lightest</item>
        <item name="colorControlNormal">@color/lightest</item>
        <item name="colorControlHighlight">@color/highlight_dark</item>
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textColorHint">@color/lightest</item>
        <item name="android:colorBackground">@color/primary</item>
    </style>

    <style name="BaseAppThemePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="colorAccent">@color/darkest_lightest</item>
        <item name="colorControlNormal">@color/darkest_lightest</item>
        <item name="colorControlHighlight">@color/highlight_light_dark</item>
        <item name="android:textColorPrimary">@color/darkest_lightest</item>
        <item name="android:textColor">@color/darkest_lightest</item>
        <item name="android:textColorHint">@color/darkest_lightest</item>
        <item name="android:backgroundTint">@color/lightest_darker</item>
    </style>
</resources>