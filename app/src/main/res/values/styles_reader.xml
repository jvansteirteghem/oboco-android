<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ReaderTheme" parent="BaseReaderTheme">
    </style>

    <style name="ReaderThemeActionBar" parent="BaseReaderThemeActionBar">
    </style>

    <style name="ReaderThemePopupMenu" parent="BaseReaderThemePopupMenu">
    </style>

    <style name="ReaderThemeAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/lightest</item>
        <item name="colorControlNormal">@color/lightest</item>
        <item name="colorControlHighlight">@color/light_highlight</item>
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textColorHint">@color/lightest</item>
        <item name="android:colorBackground">@color/darker</item>
    </style>

    <style name="BaseReaderTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darker</item>
        <item name="colorPrimaryDark">@color/darkest</item>
        <item name="colorAccent">@color/lightest</item>
        <item name="colorControlNormal">@color/lightest</item>
        <item name="colorControlHighlight">@color/light_highlight</item>
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textColorHint">@color/lightest</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/darkest</item>
        <item name="android:statusBarColor">@color/darkest_semitransparent</item>
        <item name="android:alertDialogTheme">@style/ReaderThemeAlertDialog</item>
        <item name="alertDialogTheme">@style/ReaderThemeAlertDialog</item>
    </style>

    <style name="BaseReaderThemeActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorAccent">@color/lightest</item>
        <item name="colorControlNormal">@color/lightest</item>
        <item name="colorControlHighlight">@color/lightest</item>
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textColorHint">@color/lightest</item>
        <item name="android:colorBackground">@color/darker</item>
    </style>

    <style name="BaseReaderThemePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="colorAccent">@color/lightest</item>
        <item name="colorControlNormal">@color/lightest</item>
        <item name="colorControlHighlight">@color/light_highlight</item>
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
        <item name="android:textColorHint">@color/lightest</item>
        <item name="android:backgroundTint">@color/darker</item>
    </style>
</resources>